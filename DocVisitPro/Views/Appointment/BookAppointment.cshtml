@model Appointment

<h2>დაჯავშნის ფორმა</h2>

@using (Html.BeginForm("Create", "Appointment", FormMethod.Post))

{
    <div class="form-group">
        @Html.LabelFor(model => model.Firstname)
        @Html.TextBoxFor(model => model.Firstname, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Firstname)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Lastname)
        @Html.TextBoxFor(model => model.Lastname, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Lastname)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Doctor)
        @Html.TextBoxFor(model => model.Doctor, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Doctor)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AppointmentDateTime)
        @Html.TextBoxFor(model => model.AppointmentDateTime, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.AppointmentDateTime)
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}